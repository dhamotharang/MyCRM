<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage Task Followup </h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="FormTaskFollowupInfo" id="FormTaskFollowupInfo" ng-class="{'submitted': submitted}" ng-submit="submitted=true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="Note">Current Note/Remark :<span class="text-danger">*</span> </label>
                                        <div class="form-group">
                                            <textarea rows="3" cols="30" class="form-control" id="Note" name="Note" data-ng-model="objTaskFollowUp.Note" placeholder="Enter Note/Remark" required tabindex="2">Enter Text Here...</textarea>
                                            <span class="errorMsg" ng-show="submitted && FormTaskFollowupInfo.Note.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Note/Remark is required.</span>
                                        </div>
                                    </div>
                                    @*<div class="form-group">
                                            <div class="col-sm-6">
                                                <label for="FollowDate"> Actual Follow Date: </label>
                                                                                <label for="FollowTime"> Actual Follow Time: </label>
                                        <div class="form-group">
                                            <elaunch-timepicker ng-model="objTaskFollowUp.ActualTime" hstep="1" mstep="1" is-meridian="ismeridian"></elaunch-timepicker>
                                            <span class="errorMsg" ng-show="submitted && (objTaskFollowUp.ActualTime == '' || objTaskFollowUp.ActualTime == null)"><i class="fa fa-exclamation-triangle"></i> &nbsp;Actual Time is required.</span>
                                        </div>
                                                <div class="form-group">
                                                    <elaunch-datepicker data-ng-model="objTaskFollowUp.ActualDate" date-options="dateOptions"  week-off="0"></elaunch-datepicker>
                                                    <span class="errorMsg" ng-show="submitted && (objTaskFollowUp.ActualDate == '' || objTaskFollowUp.ActualDate == null)"><i class="fa fa-exclamation-triangle"></i> &nbsp;Actual Date is required.</span>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">

                                            </div>
                                        </div>*@
                                    <div class="form-group">
                                        <label for="FollowDate"> Next Follow : </label>
                                        <div class="form-group">
                                            <elaunch-datepicker data-ng-model="objTaskFollowUp.NextFollowDate" date-options="dateOptions"  week-off="0"></elaunch-datepicker>
                                            <span class="errorMsg" ng-show="submitted && (objTaskFollowUp.NextFollowDate == '' || objTaskFollowUp.NextFollowDate == null)"><i class="fa fa-exclamation-triangle"></i> &nbsp;Next Date is required.</span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="FollowTime"> Next Follow : </label>
                                        <div class="form-group">
                                            <elaunch-timepicker ng-model="objTaskFollowUp.NextFollowTime" hstep="1" mstep="1" is-meridian="ismeridian" ></elaunch-timepicker>
                                            <span class="errorMsg" ng-show="submitted && (objTaskFollowUp.NextFollowTime == '' || objTaskFollowUp.NextFollowTime == null)"><i class="fa fa-exclamation-triangle"></i> &nbsp;Next Time is required.</span>
                                        </div>
                                    </div>
                                    @*<div class="form-group">
                                        <label for="FollowTime"> Plan Date: </label>
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="PlanDateTime" name="PlanDateTime" data-ng-model="objTaskFollowUp.PlanDateTime" ng-disabled="true">
                                        </div>
                                    </div>*@
                                    @*<div class="form-group">
                                        </div>*@
                                    <div class="form-group">
                                        <label for="TaskStatus">Follow Status: </label>
                                        <elaunch-autocomplete min-chars="0" mode="TaskStatusMaster" isdisplay="true" placeholder="Enter Status" id="Status"
                                                              value-changed="callback(value)" ng-model="objTaskFollowUp.TaskStatus">
                                        </elaunch-autocomplete>
                                        @*<span class="errorMsg" ng-show="submitted && objTaskFollowUp.TaskStatus.Display == ''"><i class="fa fa-exclamation-triangle"></i> &nbsp;Task Status is required.</span>*@
                                    </div>
                                    <div class="form-group">
                                        <label for="Name">Assign To:</label>
                                        <div class="form-group">
                                            <div isteven-multi-select
                                                 input-model="ReportingUserArray"
                                                 output-model="objTaskFollowUp.outputReportingUser"
                                                 button-label="maker"
                                                 item-label="maker"
                                                 tick-property="ticked"
                                                 disable-property="disabled"
                                                 is-disabled="disableDir"
                                                 selection-mode="single"></div>
                                            <span class="text-danger">{{objTaskFollowUp.AssignMsg}}</span>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="isClicked == false" ng-click="FormTaskFollowupInfo.$valid && CreateTaskFollowUp()" tabindex="15"> <i class="fa fa-save"></i> Save</button>
                                <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/ElaunchControls")
    @Scripts.Render("~/bundles/Task")
}






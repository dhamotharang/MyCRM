<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage Buyer Address Detail</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="FormBuyerAddressDetailForm" id="FormBuyerAddressDetailForm" ng-class="{'submitted': submitted}" ng-submit="submitted=true" novalidate>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="CountryData" class="control-label">Country: <span class="text-danger">*</span></label>
                                            <elaunch-autocomplete min-chars="0" mode="CountryMaster" id="Country" isdisplay="true"
                                                                  placeholder="Enter Country"
                                                                  value-changed="callback(value)" ng-model="objBuyerAddress.CountryData">
                                            </elaunch-autocomplete>
                                            <span class="errorMsg" ng-show="submitted && objBuyerAddress.CountryData.Display == ''"><i class="fa fa-exclamation-triangle"></i> &nbsp;Please select Country.</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="StateData" class="control-label">State: <span class="text-danger">*</span></label>
                                            <elaunch-autocomplete min-chars="0" mode="StateMaster" id="State" isdisplay="objBuyerAddress.CountryData.Value!=''"
                                                                  placeholder="Enter State" related-value="objBuyerAddress.CountryData.Value"
                                                                  value-changed="callback(value)" ng-model="objBuyerAddress.StateData">
                                            </elaunch-autocomplete>
                                            <span class="errorMsg" ng-show="submitted && objBuyerAddress.StateData.Display == ''"><i class="fa fa-exclamation-triangle"></i> &nbsp;Please select State.</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="CityData" class="control-label">District: <span class="text-danger">*</span></label>
                                            <elaunch-autocomplete min-chars="0" mode="CityMaster" id="City" isdisplay="objBuyerAddress.StateData.Value!=''"
                                                                  placeholder="Enter District" related-value="objBuyerAddress.StateData.Value"
                                                                  value-changed="callback(value)" ng-model="objBuyerAddress.CityData">
                                            </elaunch-autocomplete>
                                            <span class="errorMsg" ng-show="submitted && objBuyerAddress.CityData.Display == ''"><i class="fa fa-exclamation-triangle"></i> &nbsp;Please select District.</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="Address" class="control-label">Address: <span class="text-danger">*</span> </label>
                                            <textarea class="form-control addressbox" id="Address" name="Address" data-ng-model="objBuyerAddress.Address" placeholder="Address" rows="2" cols="60" style="max-width: 100%;" required></textarea>
                                            <span class="errorMsg" ng-show="submitted && FormBuyerAddressDetailForm.Address.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Address is required.</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="WebAddress" class="control-label">Telephone No: @*<span class="text-danger">*</span>*@</label>
                                            <elaunch-mobile ng-model="cmpnyteliphone" placeholder="Enter Telephone Number" telcode-array="cmpnytelCodeData" ng-required="false"></elaunch-mobile>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="Email" class="control-label">Email Address: </label>
                                            <elaunch-Email ng-model="emailid" telcode-array="cmpnyemailCodeData" ng-required="false"></elaunch-Email>

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="addressData" class="control-label">Type of address: @*<span class="text-danger">*</span>*@</label>
                                            <elaunch-autocomplete min-chars="0" mode="AddressTypeMaster" id="address" isdisplay="true"
                                                                  placeholder="Enter address"
                                                                  value-changed="callback(value)" ng-model="objBuyerAddress.addressData">
                                            </elaunch-autocomplete>
                                            @*<span class="errorMsg" ng-show="submitted && objBuyerAddress.CountryData.Display == ''"><i class="fa fa-exclamation-triangle"></i> &nbsp;Please select Country.</span>*@
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="PinCode" class="control-label">Pincode: <span class="text-danger">*</span> </label>
                                            <input type="text" class="form-control" oninput="this.value = this.value.replace(/[^0-9.]/g, ''); this.value = this.value.replace(/(\..*)\./g, '$1');" id="PinCode" name="PinCode" data-ng-model="objBuyerAddress.PinCode" placeholder="Pincode" maxlength="50" required>
                                            <span class="errorMsg" ng-show="submitted && FormBuyerAddressDetailForm.PinCode.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;PinCode is required.</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="WeeklyOff" class="control-label">Weekly off: </label>
                                            <select name="WeeklyOff" id="WeeklyOff" data-ng-model="objBuyerAddress.WeeklyOff" class="form-control input-dark">
                                                <option value="Sunday"> Sunday </option>
                                                <option value="Monday"> Monday </option>
                                                <option value="Tuesday"> Tuesday </option>
                                                <option value="Wednesday"> Wednesday </option>
                                                <option value="Thursday"> Thursday </option>
                                                <option value="Friday"> Friday </option>
                                                <option value="Saturday"> Saturday </option>
                                                <option value="Saturday&Sunday"> Saturday&Sunday </option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>

                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-click="teliphone != '' && mail != '' && FormBuyerAddressDetailForm.$valid && CreateUpdate(objBuyerAddress)"> <i class="fa fa-save"></i>Submit</button>
                                <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


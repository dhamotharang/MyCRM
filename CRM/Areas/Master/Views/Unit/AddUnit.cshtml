<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" ng-click="$ctrl.ok()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage UOM</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="$ctrl.FormUnit" ng-class="{'submitted': $ctrl.submitted}" id="$ctrl.FormUnit" ng-submit="$ctrl.submitted = true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div id="validation-summary" class="text-danger" hidden="hidden">
                                    <ul></ul>
                                </div>
                                <div class="modal-body">

                                    <div class="form-group">
                                        <label>Unit Name :</label><span class="required">*</span>
                                        <input type="text" id="UnitName" name="UnitName" class="form-control" data-modal="modal" ng-model="$ctrl.UnitObj.UnitName" placeholder="Unit Name" ng-required="true" maxlength="50" />
                                        <span class="errorMsg" ng-show="$ctrl.submitted && $ctrl.FormUnit.UnitName.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;The Unit Name is required.</span>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" @*ng-show="$ctrl.UnitObj.UnitId==0"*@ data-ng-if="$ctrl.UnitObj.UnitId <= 0 && isClicked == false" class="btn btn-default btn-info btn-icon icon-left" data-ng-click="$ctrl.FormUnit.$valid && $ctrl.SaveUnit()"><i class="fa fa-save"></i>Save</button>
                                <button type="submit" @*ng-show="$ctrl.UnitObj.UnitId>0"*@ data-ng-if="$ctrl.UnitObj.UnitId > 0 && isClicked == false" class="btn btn-default btn-info btn-icon icon-left" data-ng-click="$ctrl.FormUnit.$valid && $ctrl.UpdateUnit()"><i class="fa fa-edit"></i>Update</button>
                                @*<button type="button" class="btn btn-default btn-success" data-ng-click="$ctrl.Reset()" tabindex="15">Reset</button>*@
                                <button type="button" class="btn btn-default" data-ng-click="$ctrl.ok()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



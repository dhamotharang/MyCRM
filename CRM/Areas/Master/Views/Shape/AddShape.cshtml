@{

    string TempImg = System.Configuration.ConfigurationManager.AppSettings["TempImgPath"];
    string ShapePath = System.Configuration.ConfigurationManager.AppSettings["ShapeImgPath"];
}

<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Shape Information</h3>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="box">
            <div class="box-body no-padding">
                <form accessible-form role="form" name="FormShapeInfo" id="FormShapeInfo" ng-class="{'submitted': submitted}" ng-submit="submitted = true" novalidate>
                    <fieldset ng-disabled="isClicked">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="ShapeName">Name:<span class="text-danger">*</span> </label>
                                        <input type="text" class="form-control" id="ShapeName" name="ShapeName" data-ng-model="objShape.ShapeName" placeholder="Shape Name" required maxlength="100">
                                        @*<div data-ng-show="FormShapeInfo.ShapeName.$dirty && FormShapeInfo.ShapeName.$invalid " class="label label-danger">
                                                invalid:<span data-ng-show="FormShapeInfo.ShapeName.$error.required ">Tell us name.</span>
                                            </div>*@
                                        <span class="errorMsg" ng-show="submitted && FormShapeInfo.ShapeName.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Shape Name is required.</span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="Description">Description:</label>
                                        <textarea class="form-control" id="Description" name="Description" data-ng-model="objShape.Description" placeholder="Description" rows="2" cols="60" style="max-width: 100%;"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="Photo" class="col-sm-3 control-label">Image <span class="text-danger">*</span></label>
                                        <div class="col-sm-4">
                                            <img data-ng-src="{{!tempImagePath || tempImagePath == ''  ? '/@ShapePath/'+ objShape.Photo : tempImagePath}}" data-ng-if="objShape.Photo != '' && objShape.Photo != null" class="img-responsive" />
                                            <div data-type="file" id="Photo" data-ng-if="isClicked == false" class="btn btn-primary" data-ngf-select ng-model="objShape.Photo" data-ngf-change="uploadImgFile($files)" data-name="Photo" data-ngf-accept="'*.jpg,*.jpeg,*.gif,*.png'" tabindex="24" style="width: 100%; margin-top: 10px;">
                                                Image Upload
                                            </div>
                                            <span class="errorMsg" ng-show="submitted && objShape.Photo == ''"><i class="fa fa-exclamation-triangle"></i> &nbsp;Image is required.</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objShape.ShapeId <= 0 && isClicked == false" data-ng-click="FormShapeInfo.$valid && CreateUpdate(objShape)"> <i class="fa fa-save"></i>Save</button>
                        <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objShape.ShapeId > 0 && isClicked == false" data-ng-click="FormShapeInfo.$valid && CreateUpdate(objShape)"><i class="fa fa-edit"></i>Update</button>
                        @*<button type="button" class="btn btn-default btn-success" data-ng-click="Reset()" tabindex="27">Reset</button>*@
                        <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
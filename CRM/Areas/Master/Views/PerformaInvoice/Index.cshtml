
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div data-ng-controller="PerformaInvoiceCtrl">


    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <elaunchgrid data-grid-obj="gridObj" mode="PerformaInvoiceMaster" title="Performa Invoice List" set-fn="setDirectiveRefresh(theDirFn)" onaddnew="Add(0)"></elaunchgrid>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PORTLET-->
        </div>
    </div>
</div>

<script type="text/ng-template" id="myModalPerformaInvoiceList.html">
    <ng-include src="'@Url.Action("PerformaPayment", "PerformaInvoice")'"></ng-include>
</script>

@section Scripts
{
    @Scripts.Render("~/bundles/PdfConvert")
    @Scripts.Render("~/bundles/ElaunchControls")
    @Scripts.Render("~/bundles/PerformaInvoice")
    @*<script src="~/Areas/Transaction/Script/Service/PurchaseOrderService.js"></script>*@
}

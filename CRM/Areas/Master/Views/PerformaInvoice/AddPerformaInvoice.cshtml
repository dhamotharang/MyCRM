                                            <td></td>
                                            <td></td>
                                            <td>{{list.ProductName || '-'}}</td>
                                            <td>{{list.ProductDescription || '-'}}</td>
                                            <td>{{list.ProductModelNo || '-' }}</td>
                                            <td>{{list.CountryOfOrigin || '-'}}</td>
                                            <td>{{list.QtyCodeValue ||'-'}}</td>

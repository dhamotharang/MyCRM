                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="BeneficiaryName">Beneficiary Name:<span class="text-danger">*</span> </label>
                                            <input type="text" class="form-control" id="BeneficiaryName" name="BeneficiaryName" data-ng-model="objPerformaInvoice.BeneficiaryName" placeholder="Beneficiary Name" maxlength="100" tabindex="15" required>
                                            <span class="errorMsg" ng-show="submitted && FormPerformaInvoice.BeneficiaryName.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Beneficiary Name is required.</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="BankName">Bank Name:<span class="text-danger">*</span> </label>
                                            <elaunch-autocomplete min-chars="0" mode="BankNameMaster" id="Bank" isdisplay="true"
                                                                  placeholder="Enter Bank" ng-required="false" tabindex="16"
                                                                  value-changed="callback(value)" ng-model="objPerformaInvoice.BankData">
                                            </elaunch-autocomplete>
                                            <span class="errorMsg" ng-show="submitted && (objPerformaInvoice.BankData.Display =='' || objPerformaInvoice.BankData.Display == null)"><i class="fa fa-exclamation-triangle"></i> &nbsp;Bank Name is required.</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="AccountType">Account Type:<span class="text-danger">*</span> </label>
                                            <elaunch-autocomplete min-chars="0" mode="AccountTypeMaster" id="AccountType" isdisplay="true"
                                                                  placeholder="Select Account Type" ng-required="false" tabindex="17"
                                                                  value-changed="callback(value)" ng-model="objPerformaInvoice.AccountTypeData">
                                            </elaunch-autocomplete>
                                            <span class="errorMsg" ng-show="submitted && (objPerformaInvoice.AccountTypeData.Display =='' || objPerformaInvoice.AccountTypeData.Display == null)"><i class="fa fa-exclamation-triangle"></i> &nbsp;Account Type is required.</span>

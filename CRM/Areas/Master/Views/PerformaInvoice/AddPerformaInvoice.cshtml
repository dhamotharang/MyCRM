            <form role="form" name="FormPerformaInvoice" id="FormPerformaInvoice" ng-class="{'submitted': submitted}" ng-submit="submitted=true" novalidate>
                <fieldset ng-disabled="isClicked">
                    <div class="box box-info">
                        <div class="box-header with-border">
                            <h3 class="box-title">
                                <span data-ng-if="addMode && isClicked == false">Add</span>
                                <span data-ng-if="!addMode && isClicked == false">Edit</span> Performa Invoice Information

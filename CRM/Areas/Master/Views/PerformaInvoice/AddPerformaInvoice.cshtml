                                                                  value-changed="callback(value)" ng-model="objPerformaInvoice.ConsigneContactData" tabindex="11">
                                            </elaunch-autocomplete>
                                            <span class="errorMsg" ng-show="submitted && (objPerformaInvoice.ConsigneContactData.Display == null || objPerformaInvoice.ConsigneContactData.Display == '')"><i class="fa fa-exclamation-triangle"></i> &nbsp;Consigne Contact is required.</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label for="ContactEmail" class="control-label">Email :</label>
                                            <input type="email" class="form-control" id="ContactEmail" name="ContactEmail" data-ng-model="objPerformaInvoice.ContactEmail" placeholder="Buyer Email" disabled="disabled">
                                            @*<span class="errorMsg" ng-show="submitted && FormPerformaInvoice.ContactEmail.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Contact Email is required.</span>*@<span class="errorMsg" ng-show="submitted && FormPerformaInvoice.ContactEmail.$error.required"><i class="fa fa-exclamation-triangle"></i></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label for="ContactTel">Mobile :</label>
                                            <input type="text" class="form-control" id="ContactTel" name="ContactTel" data-ng-model="objPerformaInvoice.ContactTel" placeholder="Mobile No" disabled="disabled">
                                            @*<span class="errorMsg" ng-show="submitted && FormPerformaInvoice.ContactTel.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Contact Mobile No is required.</span>*@<span class="errorMsg" ng-show="submitted && FormPerformaInvoice.ContactTel.$error.required"><i class="fa fa-exclamation-triangle"></i></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label for="TaxValue" class="control-label">Tax Details: </label>
                                            {{objPerformaInvoice.ConsigneTax}}
                                        </div>
                                    </div>
                                    @*<div class="col-sm-6">
                                            <div class="form-group">
                                                <label for="Tax" class="control-label">Tax Type :<b class="errorMsg">*</b></label>
                                                <elaunch-autocomplete min-chars="0" mode="TaxMaster" id="TaxMaster" isdisplay="true"
                                                                      placeholder="Enter Tax" tabindex="12"
                                                                      value-changed="callback(value)" ng-model="objPerformaInvoice.TaxData">
                                                </elaunch-autocomplete>
                                                <span class="errorMsg" ng-show="submitted && (objPerformaInvoice.TaxData.Display == null || objPerformaInvoice.TaxData.Display == '')"><i class="fa fa-exclamation-triangle"></i> &nbsp;Tax is required.</span>
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <label for="TaxValue" class="control-label">Tax Value: <b class="errorMsg">*</b> </label>
                                                <input type="text" class="form-control" id="TaxValue" name="TaxValue" data-ng-model="objPerformaInvoice.ConsigneTax" placeholder="Tax Value" tabindex="13" required>
                                                <span class="errorMsg" ng-show="submitted && FormPerformaInvoice.ConsigneTax.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Tax Value is required.</span>
                                            </div>
                                        </div>*@
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="DeliveryTermId" class="control-label">Delivert Term<span class="text-danger">*</span></label>
                                            <elaunch-autocomplete min-chars="0" mode="DeliveryTermsMaster" isdisplay="true"
                                                                  placeholder="Enter Delivery Name" id="DeliveryTerm" tabindex="3"
                                                                  value-changed="callback(value)" ng-model="objPerformaInvoice.DeliveryData">
                                            </elaunch-autocomplete>
                                            <span class="errorMsg" ng-show="submitted && (objPerformaInvoice.DeliveryTerm.Display == null || objPerformaInvoice.DeliveryTerm.Display == '')"><i class="fa fa-exclamation-triangle"></i> &nbsp;Please select Delivery Term.</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="PaymentTermId" class="control-label">Payment Terms<span class="text-danger">*</span></label>
                                            <elaunch-autocomplete min-chars="0" mode="PaymentTermsMaster" isdisplay="true"
                                                                  placeholder="Enter Payment Terms" id="PaymentTerm" tabindex="4"
                                                                  value-changed="callback(value)" ng-model="objPerformaInvoice.PaymentTermData">
                                            </elaunch-autocomplete>
                                            <span class="errorMsg" ng-show="submitted && (objPerformaInvoice.PaymentTermData.Display == null || objPerformaInvoice.PaymentTermData.Display == '')"><i class="fa fa-exclamation-triangle"></i> &nbsp;Payment Terms is required.</span>
                                        </div>
                                    </div>
                                    <input type="text" data-ng-model="objPerformaInvoice.CreatedDate" hidden />
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="ModeofShipment" class="control-label">Mode of Shipment@*<span class="text-danger">*</span>*@<span class="text-danger"></span><span class="text-danger"></span></label>
                                            <elaunch-autocomplete min-chars="0" mode="ShipmentMaster" isdisplay="true"
                                                                  placeholder="Enter Mode of Shipment" id="ModeofShipment" tabindex="5"
                                                                  value-changed="callback(value)" ng-model="objPerformaInvoice.ModeOfShipmentData">
                                            </elaunch-autocomplete>
                                            @*<span class="errorMsg" ng-show="submitted && (objPerformaInvoice.ModeOfShipmentData.Display == null || objPerformaInvoice.ModeOfShipmentData.Display == '')"><i class="fa fa-exclamation-triangle"></i> &nbsp;Please select is Mode of Shipment.</span>*@<span class="errorMsg" ng-show="submitted && (objPerformaInvoice.ModeOfShipmentData.Display == null || objPerformaInvoice.ModeOfShipmentData.Display == '')"><i class="fa fa-exclamation-triangle"></i></span><span class="errorMsg" ng-show="submitted && (objPerformaInvoice.ModeOfShipmentData.Display == null || objPerformaInvoice.ModeOfShipmentData.Display == '')"><i class="fa fa-exclamation-triangle"></i></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="ShippingMarks" class="control-label">Shipping Marks @*<b class="errorMsg">*</b>*@<b class="errorMsg"></b><b class="errorMsg"></b></label>
                                            <input type="text" class="form-control" id="ShippingMarks" name="ShippingMarks" data-ng-model="objPerformaInvoice.ShippingMarks" placeholder="Shipping Marks" maxlength="99" tabindex="6">
                                        </div>
                                    </div>
                                    <input type="text" data-ng-model="objPerformaInvoice.CreatedDate" hidden />
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="PortofLoading" class="control-label">Port Of Loading<span class="text-danger">*</span></label>
                                            <elaunch-autocomplete min-chars="0" mode="PortMaster" isdisplay="true"
                                                                  placeholder="Enter Port of Loading" id="PortofLoading" tabindex="7"
                                                                  value-changed="callback(value)" ng-model="objPerformaInvoice.LoadingPortData">
                                            </elaunch-autocomplete>
                                            <span class="errorMsg" ng-show="submitted && (objPerformaInvoice.LoadingPortData.Display == null || objPerformaInvoice.LoadingPortData.Display == '')"><i class="fa fa-exclamation-triangle"></i> &nbsp;Please select is Port of Loading.</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <label for="PortofDischarge" class="control-label">Port of Discharge<span class="text-danger">*</span></label>
                                            <elaunch-autocomplete min-chars="0" mode="PortMaster" isdisplay="true"
                                                                  placeholder="Enter Port of Discharge" id="PortofDischarge" tabindex="8"
                                                                  value-changed="callback(value)" ng-model="objPerformaInvoice.DischargePortData">
                                            </elaunch-autocomplete>
                                            <span class="errorMsg" ng-show="submitted && (objPerformaInvoice.DischargePortData.Display == null || objPerformaInvoice.DischargePortData.Display == '')"><i class="fa fa-exclamation-triangle"></i> &nbsp;Payment Terms is Port of Discharge.</span>
                                        </div>
                                    </div>
                                    <input type="text" data-ng-model="objPerformaInvoice.CreatedDate" hidden />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h3 class="panel-title" style="margin:0">
                                    Product Detail
                                    <div class="pull-right">
                                        <div class="form-group">
                                            <a type="button" name="name" data-ng-click="AddProductDetails(objPerfomaPrd)" class="btn btn-primary btn-sm" tabindex="14"><i class="fa fa-plus"></i> Product Detail</a>

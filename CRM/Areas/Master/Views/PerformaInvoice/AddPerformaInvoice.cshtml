                            <div class="panel-body">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            @*<th>Status</th>*@
                                            <th></th>
                                            <th></th>
                                            <th>Product Name</th>
                                            <th>Description</th>
                                            <th>Model No</th>
                                            <th>CountryOfOrigin</th>
                                            <th>Qty Code</th>
                                            <th>Qty</th>
                                            <th>Unit Code</th>
                                            <th>Unit</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>

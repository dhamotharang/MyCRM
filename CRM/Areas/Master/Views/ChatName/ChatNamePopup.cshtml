
@{
    Layout = null;
}

<!DOCTYPE html>
<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Chat Name</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="FormChatInfo" id="FormChatInfo" ng-class="{'submitted': submitted}" ng-submit="submitted=true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="ChatName">Chat Name:<span class="text-danger">*</span> </label>
                                        <input type="text" class="form-control" id="ChatName" name="ChatName" maxlength="100" data-ng-model="objchat.ChatName" ng-bind="objchat" placeholder="Chat Name" required>

                                        <span class="errorMsg" ng-show="submitted && FormChatInfo.ChatName.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Chat Name is required.</span>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objchat.ChatId <= 0 && isClicked == false" data-ng-click="FormChatInfo.$valid && Create(objchat)"> <i class="fa fa-save"></i>Save</button>
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objchat.ChatId > 0 && isClicked == false" data-ng-click="FormChatInfo.$valid && Update(objchat)"><i class="fa fa-edit"></i>Update</button>
                                @*<button type="button" class="btn btn-default btn-success" data-ng-click="Reset()" tabindex="15">Reset</button>*@
                                <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

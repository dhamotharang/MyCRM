<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage Delivery Terms Information</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="FormDeliveryTermsInfo" id="FormDeliveryTermsInfo" ng-class="{'submitted': submitted}" ng-submit="submitted = true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="DeliveryName">Delivery Terms:<span class="text-danger">*</span> </label>
                                        <input type="text" class="form-control" id="DeliveryName" name="DeliveryName" data-ng-model="objDeliveryTerms.DeliveryName" placeholder="Delivery Name" required maxlength="100">
                                        @*<div data-ng-show="FormDeliveryTermsInfo.DeliveryName.$dirty && FormDeliveryTermsInfo.DeliveryName.$invalid" class="label label-danger">
                                                Invalid: <span data-ng-show="FormDeliveryTermsInfo.DeliveryName.$error.required">Tell us Delivery Name.</span>
                                            </div>*@
                                        <span class="errorMsg" ng-show="submitted && FormDeliveryTermsInfo.DeliveryName.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Delivery Name is required.</span>
                                    </div>
                                    <div class="form-group">
                                        <label for="Description">Place of delivery:<span class="text-danger">*</span> </label>
                                        <textarea rows="5" type="text" class="form-control" id="Description" name="Description" data-ng-model="objDeliveryTerms.Description" placeholder="Description" required>  </textarea>
                                        @*<div data-ng-show="FormDeliveryTermsInfo.Description.$dirty && FormDeliveryTermsInfo.Description.$invalid" class="label label-danger">
                                                Invalid: <span data-ng-show="FormDeliveryTermsInfo.Description.$error.required">Tell us Description.</span>
                                            </div>*@
                                        <span class="errorMsg" ng-show="submitted && FormDeliveryTermsInfo.Description.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Description is required.</span>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="id <= 0 && isClicked == false" data-ng-click="FormDeliveryTermsInfo.$valid && CreateUpdate(objDeliveryTerms)"> <i class="fa fa-save"></i>Save</button>
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="id > 0 && isClicked == false" data-ng-click="FormDeliveryTermsInfo.$valid && CreateUpdate(objDeliveryTerms)"><i class="fa fa-edit"></i>Update</button>
                                @*     <button type="button" class="btn btn-default btn-success" data-ng-click="Reset()" tabindex="4">Reset</button>*@
                                <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="CompanyCtrl">
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN PORTLET-->
            <div class="portlet light bordered">
               
                <div class="portlet-body">
                    <div>
                        <div>
                            @*<input type="button" class="btn btn-success" ng-click="AddCompany();" value="Add Company" data-toggle="modal" data-target="#myModal" />*@

                            <div class="row">
                                <div class="col-sm-12">
                                    <elaunchgrid data-grid-obj="gridObj" mode="CompanyMaster" onaddnew="AddCompany()" set-fn="setDirectiveRefresh(theDirFn)" title="Company List"></elaunchgrid>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END PORTLET-->
        </div>
    </div>
</div>

<script type="text/ng-template" id="companyModalContent.html">
    <ng-include src="'@Url.Action("AddCompany", "Company")'"></ng-include>
</script>

@section Scripts
{
@Scripts.Render("~/bundles/ElaunchControls")
@Scripts.Render("~/bundles/Company")
}






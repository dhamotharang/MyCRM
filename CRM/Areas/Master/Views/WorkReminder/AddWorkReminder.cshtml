<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage AgencyType Information</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="FormWorkRemindInfo" id="FormWorkRemindInfo" ng-class="{'submitted': submitted}" ng-submit="submitted=true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">
                                    <div class="form-group">
                                                <label for="DepartmentData" class="control-label">Department Name: <span class="text-danger">*</span></label>
                                                <elaunch-autocomplete min-chars="0" mode="DepartmentMaster" id="Department" isdisplay="true"
                                                                      placeholder="Enter Department"
                                                                      value-changed="callback(value)" ng-model="objWorkRemind.DepartmentData">
                                                </elaunch-autocomplete>
                                        <span class="errorMsg" ng-show="submitted && (objWorkRemind.DepartmentData.Display == '' || objWorkRemind.DepartmentData.Display == null)"><i class="fa fa-exclamation-triangle"></i> &nbsp;Department Name is required.</span>
                                    </div>
                                    <div class="form-group">
                                        <label for="Title">Work Title : </label>
                                        <input type="text" class="form-control" id="Title" name="Title" data-ng-model="objWorkRemind.Title" placeholder="Title"  maxlength="100">
                                    </div>
                                    <div class="form-group">
                                        <label for="Description" class="control-label">Work Description: </label>
                                        <textarea class="form-control addressbox" id="Description" name="Description" data-ng-model="objWorkRemind.Description" placeholder="Description" rows="2" cols="60" style="max-width: 100%;"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="RemindDate">Remind Date:</label>
                                        <div class="form-group">
                                            <elaunch-datepicker ng-model="objWorkRemind.RemindDate" name="RemindDate" date-options="dateOptions" week-off="0" tabindex="3"></elaunch-datepicker>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="RemindTime">Remind Time:</label>
                                        <elaunch-timepicker ng-model="objWorkRemind.RemindTime" hstep="1" mstep="1" is-meridian="ismeridian" is-required="false"></elaunch-timepicker>
                                    </div>
                                    <div class="form-group">
                                        <label for="RemindMode" class="control-label">Remind Mode: </label>
                                        <select name="RemindMode" id="RemindMode" data-ng-model="objWorkRemind.RemindMode" class="form-control input-dark">
                                            <option value=""> ---Select--- </option>
                                            <option value="Daily"> Daily </option>
                                            <option value="Monthly"> Monthly </option>
                                            <option value="Quarterly"> Quarterly </option>
                                            <option value="Yearly"> Yearly </option>
                                            <option value="SixMonthly"> Six Monthly </option>
                                        </select>
                                        @*<option value="None" hidden disabled> ---Select--- </option>*@
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left"  data-ng-if="objWorkRemind.WorkRemindId <= 0 && isClicked == false" data-ng-click="objWorkRemind.DepartmentData.Display!='' && CreateUpdate(objWorkRemind)"> <i class="fa fa-save"></i>Save</button>
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objWorkRemind.WorkRemindId > 0 && isClicked == false" data-ng-click="objWorkRemind.DepartmentData.Display!='' && CreateUpdate(objWorkRemind)"><i class="fa fa-edit"></i>Update</button>
                                <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div ng-controller="DocumentCtrl">


   
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN PORTLET-->
            <div class="portlet light bordered">
              
                <div class="portlet-body">
                    <div>
                        <div>
                            @*<input type="button" class="btn btn-success" ng-click="AddEventType();" value="Add EventType" data-toggle="modal" data-target="#myModal" />*@

                            <div class="row">
                                <div class="col-sm-12">
                                    <elaunchgrid data-grid-obj="gridObj" mode="DocumentNameMaster" onaddnew="AddDocument()" set-fn="setDirectiveRefresh(theDirFn)" title="Document List"></elaunchgrid>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- END PORTLET-->
        </div>
    </div>
</div>

<script type="text/ng-template" id="myModalContent.html">
    <ng-include src="'@Url.Action("AddDoc", "Document")'"></ng-include>
</script>

@section Scripts
{
   @Scripts.Render("~/bundles/ElaunchControls")
@Scripts.Render("~/bundles/Document")
}








@{
    Layout = null;
}

<!DOCTYPE html>
<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage Department</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="FormDepartInfo" id="FormDepartInfo" ng-class="{'submitted': submitted}" ng-submit="submitted=true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="DepartmentName">Department Name:<span class="text-danger">*</span> </label>
                                        <input type="text" class="form-control" id="DepartmentName" name="DepartmentName" maxlength="100" data-ng-model="objdepart.DepartmentName" ng-bind="objdepart" placeholder="Department Name" required>
                                        @*<div data-ng-show="FormDepartInfo.DepartmentName.$dirty && FormDepartInfo.DepartmentName.$invalid" class="label label-danger">
                                                Invalid: <span data-ng-show="FormDepartInfo.DepartmentName.$error.required">Tell us Department Name.</span>
                                            </div>*@
                                        <span class="errorMsg" ng-show="submitted && FormDepartInfo.DepartmentName.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Department Name is required.</span>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objdepart.DepartmentId <= 0 && isClicked == false" data-ng-click="FormDepartInfo.$valid && Create(objdepart)"> <i class="fa fa-save"></i>Save</button>
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objdepart.DepartmentId > 0 && isClicked == false" data-ng-click="FormDepartInfo.$valid && Update(objdepart)"><i class="fa fa-edit"></i>Update</button>
                                @* <button type="button" class="btn btn-default btn-success" data-ng-click="Reset()" tabindex="15">Reset</button>*@
                                <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage Payment Terms Information</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="FormPaymentTermsInfo" id="FormPaymentTermsInfo" ng-class="{'submitted': submitted}" ng-submit="submitted = true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="TermName">Term Name:<b class="errorMsg">*</b> </label>
                                        <input type="text" class="form-control" id="TermName" name="TermName" data-ng-model="objPaymentTerms.TermName" placeholder="TermName Name" required maxlength="100">
                                        @*<div data-ng-show="FormPaymentTermsInfo.TermName.$dirty && FormPaymentTermsInfo.TermName.$invalid" class="label label-danger">
                                                Invalid: <span data-ng-show="FormPaymentTermsInfo.TermName.$error.required">Tell us Term Name.</span>
                                            </div>*@
                                        <span class="errorMsg" ng-show="submitted && FormPaymentTermsInfo.TermName.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Term Name is required.</span>
                                    </div>
                                    <div class="form-group">
                                        <label for="Terms">Terms:<b class="errorMsg">*</b> </label>
                                        <input type="text" class="form-control" id="Terms" name="Terms" data-ng-model="objPaymentTerms.Terms" maxlength="6"  placeholder="00.00" required ng-pattern="/^[0-9]{1,2}(\.[0-9]+)?$|^100(\.[0]+)?$/" >
                                        <span class="errorMsg" ng-show="submitted && FormPaymentTermsInfo.Terms.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Terms is required.</span>
                                        <span class="errorMsg" ng-show="submitted && !FormPaymentTermsInfo.Terms.$valid">
                                            <i class="fa fa-exclamation-triangle"></i>Invalid!
                                        </span>
                                    </div>
                                    <div class="form-group">
                                        <label for="Description">Description:<b class="errorMsg">*</b> </label>
                                        <textarea rows="5" type="text" class="form-control" id="TermName" name="Description" data-ng-model="objPaymentTerms.Description" placeholder="Description" required>  </textarea>
                                        @*<div data-ng-show="FormPaymentTermsInfo.Description.$dirty && FormPaymentTermsInfo.Description.$invalid" class="label label-danger">
                                                Invalid: <span data-ng-show="FormPaymentTermsInfo.Description.$error.required">Tell us Description.</span>
                                            </div>*@
                                        <span class="errorMsg" ng-show="submitted && FormPaymentTermsInfo.Description.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Description is required.</span>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="id <= 0 && isClicked == false" data-ng-click="FormPaymentTermsInfo.$valid && CreateUpdate(objPaymentTerms)"> <i class="fa fa-save"></i>Save</button>
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="id > 0 && isClicked == false" data-ng-click="FormPaymentTermsInfo.$valid && CreateUpdate(objPaymentTerms)"><i class="fa fa-edit"></i>Update</button>
                                @*<button type="button" class="btn btn-default btn-success" data-ng-click="Reset()" tabindex="4">Reset</button>*@
                                <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

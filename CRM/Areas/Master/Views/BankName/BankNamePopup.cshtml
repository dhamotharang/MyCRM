
<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Bank Name</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="FormBankInfo" id="FormBankInfo" ng-class="{'submitted': submitted}" ng-submit="submitted=true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="BankName">Bank Name:<span class="text-danger">*</span> </label>
                                        <input type="text" class="form-control" id="BankName" name="BankName" maxlength="100" data-ng-model="objBank.BankName" ng-bind="objchat" placeholder="Bank Name" required>

                                        <span class="errorMsg" ng-show="submitted && FormBankInfo.BankName.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Bank Name is required.</span>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objBank.BankId <= 0 && isClicked == false" data-ng-click="FormBankInfo.$valid && Create(objBank)"> <i class="fa fa-save"></i>Save</button>
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objBank.BankId > 0 && isClicked == false" data-ng-click="FormBankInfo.$valid && Update(objBank)"><i class="fa fa-edit"></i>Update</button>
                                @*<button type="button" class="btn btn-default btn-success" data-ng-click="Reset()" tabindex="15">Reset</button>*@
                                <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
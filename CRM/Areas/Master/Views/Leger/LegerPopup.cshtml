

<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Leger Information</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="FormLegerInfo" id="FormLegerInfo" ng-class="{'submitted': submitted}" ng-submit="submitted = true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="LegerHeadName">LegerHead Name:<span class="text-danger">*</span> </label>

                                        <elaunch-autocomplete min-chars="0" mode="LegerHeadMaster" id="LegerHead" isdisplay="true"
                                                              placeholder="Enter LegerHead" name="LegerHead"
                                                              value-changed="callback(value)" ng-model="objLeger.LegerHead" ng-required="true">
                                        </elaunch-autocomplete>
                                        <span class="errorMsg" ng-show="submitted && FormLegerInfo.LegerHeadData.$error.required || objLeger.LegerHeadData.Display == ''"><i class="fa fa-exclamation-triangle"></i> &nbsp;LegerHead Name is required.</span>
                                    </div>
                                    <div class="form-group">
                                        <label for="LegerName">Leger Name:<span class="text-danger">*</span> </label>
                                        <input type="text" class="form-control" id="LegerName" maxlength="100" name="LegerName" data-ng-model="objLeger.LegerName" ng-bind="objLeger" placeholder="Leger Name" required>

                                        <span class="errorMsg" ng-show="submitted && FormLegerInfo.LegerName.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Leger Name is required.</span>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objLeger.LegerId <= 0 && isClicked == false" data-ng-click="objLeger.CountryData.Display != '' && FormLegerInfo.$valid && Create(objLeger)"> <i class="fa fa-save"></i>Save</button>
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objLeger.LegerId > 0 && isClicked == false" data-ng-click="objLeger.CountryData.Display != '' && FormLegerInfo.$valid && Update(objLeger)"><i class="fa fa-edit"></i>Update</button>
                                <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

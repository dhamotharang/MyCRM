

@{
    Layout = null;
}

<!DOCTYPE html>

<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="$ctrl.ok()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage Email Speech</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="SpeechInfo" id="SpeechInfo" ng-class="{'submitted': submitted}" ng-submit="submitted = true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="Description">Email Speech Used For:<span class="text-danger">*</span> </label>
                                        <input type="text" id="title" class="form-control" name="title" data-ng-model="$ctrl.speechData.Title" placeholder="Email Speech" required maxlength="100" ng-disabled="$ctrl.speechData.SpeechId> 0 && isClicked == false">
                                        <span class="errorMsg" ng-show="submitted && SpeechInfo.title.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Email Speech For is required.</span>
                                    </div>
                                    <div class="form-group">
                                        <label for="Subject">Subject:<span class="text-danger">*</span> </label>
                                        <input type="text" id="Subject" class="form-control" name="Subject" data-ng-model="$ctrl.speechData.Subject" placeholder="Subject" required maxlength="100">
                                        <span class="errorMsg" ng-show="submitted && SpeechInfo.Subject.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Subject is required.</span>
                                    </div>
                                    <div class="form-group">
                                        <label for="Description">Description/Matter:<span class="text-danger">*</span> </label>
                                        <div data-ng-show="isClicked==false"><textarea data-ck-editor ng-model="$ctrl.speechData.Description" required></textarea></div>
                                        <div data-ng-show="isClicked==true"><textarea data-ck-editor ng-model="$ctrl.speechData.Description" disabled="disabled" required></textarea></div>
                                            <span class="errorMsg" ng-show="submitted && ($ctrl.speechData.Description == '' || $ctrl.speechData.Description == null)"><i class="fa fa-exclamation-triangle"></i> &nbsp;Description is required.</span>
                                        </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="$ctrl.speechData.SpeechId <= 0 && isClicked == false" data-ng-click="$ctrl.speechData.Description != '' && SpeechInfo.$valid && $ctrl.SaveSpeech()"> <i class="fa fa-save"></i>Save</button>
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="$ctrl.speechData.SpeechId> 0 && isClicked == false" data-ng-click="$ctrl.speechData.Description != '' && SpeechInfo.$valid && $ctrl.UpdateSpeech()"><i class="fa fa-edit"></i>Update</button>
                                @*<button type="button" class="btn btn-default btn-success" data-ng-click="$ctrl.Reset()" tabindex="15">Reset</button>*@
                                <button type="button" class="btn btn-default" data-ng-click="$ctrl.ok()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

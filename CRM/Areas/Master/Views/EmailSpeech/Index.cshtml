
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="EmailSpeechController">


    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div>
                        <div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <elaunchgrid data-grid-obj="gridObj" mode="EmailSpeech" set-fn="setDirectiveRefresh(theDirFn)" onaddnew="AddEmailSpeech()" title="Email Speech List" is-add="false"></elaunchgrid>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- END PORTLET-->
        </div>
    </div>
</div>

<script type="text/ng-template" id="speechModalContent.html">
    <ng-include src="'@Url.Action("AddSignature", "EmailSpeech")'"></ng-include>
</script>
<script type="text/javascript">
    CKEDITOR_BASEPATH = "@Url.Content("~/Scripts/ckeditor/")";
</script>

@section Scripts
{
    @Scripts.Render("~/bundles/CkEditor")
    @Scripts.Render("~/bundles/ElaunchControls")
    @Scripts.Render("~/bundles/EmailSpeech")
}


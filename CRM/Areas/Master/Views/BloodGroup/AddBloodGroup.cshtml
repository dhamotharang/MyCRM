
<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" ng-click="$ctrl.ok()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage BloodGroup</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="FormBloodGroupInfo" id="FormBloodGroupInfo" ng-class="{'submitted': submitted}" ng-submit="submitted=true" novalidate>
                            @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div id="validation-summary" class="text-danger" hidden="hidden">
                                    <ul></ul>
                                </div>*@
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">

                                    <div class="form-group">
                                        <label>Blood Group :</label>
                                        <input type="text" id="BloodGroup" name="BloodGroup" class="form-control" ng-model="$ctrl.BloodGroupObj.BloodGroup" placeholder="Blood Group" ng-required="true" maxlength="50" />
                                        @*<span class="errorMsg" ng-show="FormBloodGroup.BloodGroup.$touched && FormBloodGroup.BloodGroup.$invalid">
                                                <span ng-show="FormBloodGroup.BloodGroup.$error.required">The BloodGroup is required.</span>
                                            </span>*@
                                        <span class="errorMsg" ng-show="submitted && FormBloodGroupInfo.BloodGroup.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;BloodGroup is required.</span>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" @*ng-show="$ctrl.BloodGroupObj.BloodGroupId==0 && isClicked == false"*@ data-ng-if="$ctrl.BloodGroupObj.BloodGroupId <= 0 && isClicked == false" class="btn btn-default btn-info btn-icon icon-left" data-ng-click="FormBloodGroupInfo.$valid && $ctrl.SaveBloodGroup()"><i class="fa fa-save"></i>Save</button>
                                <button type="submit" @*ng-show="$ctrl.BloodGroupObj.BloodGroupId>0 && isClicked == false"*@ data-ng-if="$ctrl.BloodGroupObj.BloodGroupId > 0 && isClicked == false" class="btn btn-default btn-info btn-icon icon-left" data-ng-click="FormBloodGroupInfo.$valid && $ctrl.UpdateBloodGroup()"><i class="fa fa-edit"></i>Update</button>
                                @*<button type="button" class="btn btn-default btn-success" data-ng-click="$ctrl.Reset()" tabindex="15">Reset</button> *@
                                <button type="button" class="btn btn-default" data-ng-click="$ctrl.ok()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



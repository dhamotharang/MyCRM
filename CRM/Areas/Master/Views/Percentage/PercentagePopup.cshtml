
@{
    Layout = null;
}

<!DOCTYPE html>
<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage Percentage</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="FormPercentageInfo" id="FormPercentageInfo" ng-class="{'submitted': submitted}" ng-submit="submitted = true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="Percentage">Percentage:<span class="text-danger">*</span> </label>
                                        <input type="number" maxlength="5" class="form-control" id="Percentage" name="Percentage" data-ng-model="objPercentage.Percentage" ng-bind="objPercentage" placeholder="00.00" ng-pattern="/^[0-9]{1,2}(\.[0-9]+)?$/" step="0.01" required>
                                        <span class="errorMsg" ng-show="submitted && FormPercentageInfo.Percentage.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Percentage is required.</span>
                                        <span class="errorMsg" ng-show="submitted && !FormPercentageInfo.Percentage.$valid">
                                            <i class="fa fa-exclamation-triangle"></i>Invalid!
                                        </span>
                                        @*<div data-ng-show="FormPercentageInfo.Percentage.$dirty && FormPercentageInfo.Percentage.$invalid" class="label label-danger">
                                                Invalid: <span data-ng-show="FormPercentageInfo.Percentage.$error.required">Tell us Percentage.</span>
                                            </div>*@

                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="id <= 0 && isClicked == false" data-ng-click="FormPercentageInfo.Percentage.$valid && Create(objPercentage)"> <i class="fa fa-save"></i>Save</button>
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="id > 0 && isClicked == false" data-ng-click="FormPercentageInfo.Percentage.$valid && Update(objPercentage)"><i class="fa fa-edit"></i>Update</button>
                                @*<button type="button" class="btn btn-default btn-success" data-ng-click="Reset()" tabindex="15">Reset</button>*@
                                <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
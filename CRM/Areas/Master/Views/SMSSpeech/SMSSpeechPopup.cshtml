
@{
    Layout = null;
}

<!DOCTYPE html>

<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage SMS Speech</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form role="form" name="FormSMSSpeechInfo" id="FormSMSSpeechInfo" ng-class="{'submitted': submitted}" ng-submit="submitted = true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="DepartmentName">Department Name:<span class="text-danger">*</span> </label>
                                        <elaunch-autocomplete min-chars="0" mode="DepartmentMaster" isdisplay="true"
                                                              placeholder="Enter Department" id="DepartmentName"
                                                              value-changed="callback(value)" ng-model="objSMSSpeech.DepartmentData">
                                        </elaunch-autocomplete>
                                        <span class="errorMsg" ng-show="submitted && (objSMSSpeech.DepartmentData.Display == '' || objSMSSpeech.DepartmentData.Display == null)"><i class="fa fa-exclamation-triangle"></i> &nbsp;Country Name is required.</span>
                                    </div>
                                    <div class="form-group">
                                        <label for="SMSTitle">SMS Title:<span class="text-danger">*</span> </label>
                                        <input type="text" class="form-control" maxlength="50" id="SMSTitle" name="SMSTitle" data-ng-model="objSMSSpeech.SMSTitle" ng-bind="objSMSSpeech" placeholder="SMS Title" ng-disabled="id > 0" required >
                                        @*<div data-ng-show="FormSMSSpeechInfo.SMSTitle.$dirty && FormSMSSpeechInfo.SMSTitle.$invalid" class="label label-danger">
                                                Invalid: <span data-ng-show="FormSMSSpeechInfo.SMSTitle.$error.required">Tell us SMS Title.</span>
                                            </div>*@
                                        <span class="errorMsg" ng-show="submitted && FormSMSSpeechInfo.SMSTitle.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;SMSTitle is required.</span>
                                    </div>
                                    <div class="form-group">
                                        <label for="SMS">SMS:<span class="text-danger">*</span> </label>
                                        <textarea rows="5" class="form-control" id="SMS" name="SMS" data-ng-model="objSMSSpeech.SMS" ng-bind="objSMSSpeech" placeholder="SMS" required>  </textarea>
                                        @*<div data-ng-show="FormSMSSpeechInfo.SMS.$dirty && FormSMSSpeechInfo.SMS.$invalid" class="label label-danger">
                                                Invalid: <span data-ng-show="FormSMSSpeechInfo.SMS.$error.required">Tell us SMS Title.</span>
                                            </div>*@
                                        <span class="errorMsg" ng-show="submitted && FormSMSSpeechInfo.SMS.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;SMS is required.</span>
                                    </div>
                                    <div class="form-group">
                                        <label for="SMSLnegth">Number of SMS Character: </label><b>{{objSMSSpeech.SMS.length}}</b>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="id <= 0 && isClicked == false" data-ng-click="FormSMSSpeechInfo.$valid && Create(objSMSSpeech)"> <i class="fa fa-save"></i>Save</button>
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="id > 0 && isClicked == false" data-ng-click="FormSMSSpeechInfo.$valid && Update(objSMSSpeech)"><i class="fa fa-edit"></i>Update</button>
                                @*<button type="button" class="btn btn-default btn-success" data-ng-click="Reset()" tabindex="15">Reset</button>*@
                                <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/ElaunchControls")
    @Scripts.Render("~/bundles/SMSSpeech")
}
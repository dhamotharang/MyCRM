

<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage Mode of Shipment</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="FormShipInfo" id="FormShipInfo" ng-class="{'submitted': submitted}" ng-submit="submitted = true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="ModeOfShipment">Mode of Shipment:<span class="text-danger">*</span> </label>
                                        <input type="text" class="form-control" maxlength="100" id="ModeOfShipment" name="ModeOfShipment" data-ng-model="objship.ModeOfShipment" ng-bind="objship" placeholder="Mode Of Shipment" required>
                                        @*<div data-ng-show="FormShipInfo.ModeOfShipment.$dirty && FormShipInfo.ModeOfShipment.$invalid" class="label label-danger">
                                                Invalid: <span data-ng-show="FormShipInfo.ModeOfShipment.$error.required">Tell us ModeOfShipment Name.</span>
                                            </div>*@
                                        <span class="errorMsg" ng-show="submitted && FormShipInfo.ModeOfShipment.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;ModeOfShipment Name is required.</span>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="id <= 0 && isClicked == false" data-ng-click="FormShipInfo.$valid && Create(objship)"> <i class="fa fa-save"></i>Save</button>
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="id > 0 && isClicked == false" data-ng-click="FormShipInfo.$valid && Update(objship)"><i class="fa fa-edit"></i>Update</button>
                                @*<button type="button" class="btn btn-default btn-success" data-ng-click="Reset()" tabindex="15">Reset</button>*@
                                <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


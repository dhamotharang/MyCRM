<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" ng-click="$ctrl.ok()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage TaskStatus</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="FormTaskStatus" id="FormTaskStatusInfo" ng-class="{'submitted': submitted}" ng-submit="submitted=true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div id="validation-summary" class="text-danger" hidden="hidden">
                                    <ul></ul>
                                </div>
                                <div class="modal-body">

                                    <div class="form-group">
                                        <label>Task Status :</label><b class="errorMsg">*</b>
                                        <input type="text" id="TaskStatus" name="TaskStatus" class="form-control" data-modal="modal" ng-model="$ctrl.TaskStatusObj.TaskStatus" placeholder="Task Status" ng-required="true" maxlength="100" />
                                        @*<span class="errorMsg" ng-show="FormTaskStatus.TaskStatus.$touched && FormTaskStatus.TaskStatus.$invalid">
                                                <span ng-show="FormTaskStatus.TaskStatus.$error.required">The TaskStatus is required.</span>
                                            </span>*@
                                        <span class="errorMsg" ng-show="submitted && FormTaskStatus.TaskStatus.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;TaskStatus is required.</span>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" @*ng-show="$ctrl.TaskStatusObj.StatusId==0"*@ data-ng-if="$ctrl.TaskStatusObj.StatusId <= 0 && isClicked == false" class="btn btn-default btn-info btn-icon icon-left" data-ng-click="FormTaskStatus.$valid && $ctrl.SaveTaskStatus()"><i class="fa fa-save"></i>Save</button>
                                <button type="submit" @*ng-show="$ctrl.TaskStatusObj.StatusId>0"*@ data-ng-if="$ctrl.TaskStatusObj.StatusId > 0 && isClicked == false" class="btn btn-default btn-info btn-icon icon-left" data-ng-click="FormTaskStatus.$valid && $ctrl.UpdateTaskStatus()"><i class="fa fa-edit"></i>Update</button>
                                @*<button type="button" class="btn btn-default btn-success" data-ng-click="$ctrl.Reset()" tabindex="15">Reset</button>*@
                                <button type="button" class="btn btn-default" data-ng-click="$ctrl.ok()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



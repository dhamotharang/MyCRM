<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage State Information</h3>
        </div>
        <div class="row" data-ng-init="CountryBind()">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="FormStateInfo" id="FormStateInfo" ng-class="{'submitted': submitted}" ng-submit="submitted = true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="CountryName">Country Name:<span class="text-danger">*</span> </label>
                                        <elaunch-autocomplete min-chars="0" mode="CountryMaster" isdisplay="true"
                                                              placeholder="Enter Country" id="CountryId"
                                                              value-changed="callback(value)" ng-model="objstate.CountryName">
                                        </elaunch-autocomplete>
                                        @*<select name="CountryId" id="CountryId" data-ng-model="objstate.CountryId" data-ng-options="SL.CountryId as SL.CountryName for SL in CountryList" class="form-control input-dark" tabindex="3" required>
                                                <option value="">---Select---</option>
                                            </select>*@
                                        <span class="errorMsg" ng-show="submitted && (objstate.CountryName.Display == '' || objstate.CountryName.Display == null)"><i class="fa fa-exclamation-triangle"></i> &nbsp;Country Name is required.</span>
                                    </div>
                                    <div class="form-group">
                                        <label for="StateName">State Name:<span class="text-danger">*</span> </label>
                                        <input type="text" class="form-control" id="StateName" maxlength="100" name="StateName" data-ng-model="objstate.StateName" ng-bind="objstate" placeholder="State Name" required>
                                        @*<div data-ng-show="FormStateInfo.StateName
                                                 .$dirty && FormStateInfo.StateName.$invalid" class="label label-danger">
                                                Invalid: <span data-ng-show="FormStateInfo.StateName.$error.required">Tell us State Name.</span>
                                            </div>*@
                                        <span class="errorMsg" ng-show="submitted && FormStateInfo.StateName.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;State Name is required.</span>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objstate.StateId <= 0 && isClicked == false" data-ng-click="objstate.CountryName.Display != '' && FormStateInfo.$valid && Create(objstate)"> <i class="fa fa-save"></i>Save</button>
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objstate.StateId > 0 && isClicked == false" data-ng-click="objstate.CountryName.Display != '' && FormStateInfo.$valid && Update(objstate)"><i class="fa fa-edit"></i>Update</button>
                                @*<button type="button" class="btn btn-default btn-success" data-ng-click="Reset()" tabindex="15">Reset</button>*@
                                <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/ElaunchControls")
    @Scripts.Render("~/bundles/State")
}
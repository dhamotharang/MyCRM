
<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage Invoice Type</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="InvoiceTypeInfo" id="InvoiceTypeInfo" ng-class="{'submitted': submitted}" ng-submit="submitted = true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="InvoiceType">Invoice Type Name:<b class="errorMsg">*</b> </label>
                                        <input type="text" class="form-control" id="InvoiceType" name="InvoiceType" data-ng-model="objInvoiceType.InvoiceTypeName" placeholder="Type Of Invoice" required maxlength="100">
                                        @*<div data-ng-show="InvoiceTypeInfo.InvoiceType.$dirty && InvoiceTypeInfo.InvoiceType.$invalid" class="label label-danger">
                                                Invalid: <span data-ng-show="InvoiceTypeInfo.InvoiceType.$error.required">Tell us InvoiceType Name.</span>
                                            </div>*@
                                        <span class="errorMsg" ng-show="submitted && InvoiceTypeInfo.InvoiceType.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;InvoiceType Name is required.</span>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objInvoiceType.InvoiceTypeId <= 0 && isClicked == false" data-ng-click="InvoiceTypeInfo.$valid && Create(objInvoiceType)"> <i class="fa fa-save"></i>Save</button>
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objInvoiceType.InvoiceTypeId > 0 && isClicked == false" data-ng-click="InvoiceTypeInfo.$valid && Update(objInvoiceType)"><i class="fa fa-edit"></i>Update</button>
                                @*<button type="button" class="btn btn-default btn-success" data-ng-click="Reset()" tabindex="15">Reset</button>*@
                                <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

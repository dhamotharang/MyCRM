
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="EmailSignatureController">

    
    <div class="row">
        <div class="col-md-12">
            <!-- BEGIN PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div>
                        <div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <elaunchgrid data-grid-obj="gridObj" mode="EmailSignature" set-fn="setDirectiveRefresh(theDirFn)" onaddnew="AddEmailSignature()" title="Email Signature List" is-add="false"></elaunchgrid>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- END PORTLET-->
        </div>
    </div>
</div>

<script type="text/ng-template" id="signatureModalContent.html">
    <ng-include src="'@Url.Action("AddSignature", "EmailSignature")'"></ng-include>
</script>
<script type="text/javascript">
    CKEDITOR_BASEPATH = "@Url.Content("~/Scripts/ckeditor/")";
</script>
@section Scripts
{
    @Scripts.Render("~/bundles/CkEditor")
    @Scripts.Render("~/bundles/ElaunchControls")
    @Scripts.Render("~/bundles/EmailSignature")
}


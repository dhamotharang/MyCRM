                                <button type="submit" @*ng-show="$ctrl.EventTypeObj.EventTypeId>0"*@ data-ng-if="$ctrl.EventTypeObj.EventTypeId > 0 && isClicked == false" class="btn btn-default btn-info btn-icon icon-left" data-ng-click="FormEventType.$valid && $ctrl.UpdateEventType($ctrl.EventTypeObj)"><i class="fa fa-edit"></i>Update</button>
                                <button type="button" class="btn btn-default" data-ng-click="$ctrl.ok()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



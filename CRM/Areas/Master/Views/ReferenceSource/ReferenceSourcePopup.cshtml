
<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Manage Referenec Source Information</h3>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="box">
                    <div class="box-body no-padding">
                        <form accessible-form role="form" name="FormReferenceSource" id="FormReferenceSource" ng-class="{'submitted': submitted}" ng-submit="submitted = true" novalidate>
                            <fieldset ng-disabled="isClicked">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="SourceName">Source Name :<span class="text-danger">*</span> </label>
                                        <input type="text" class="form-control" id="SourceName" name="SourceName" maxlength="100" data-ng-model="objRefSource.SourceName" ng-bind="objRefSource" placeholder="Source Name" ng-pattern="/^[a-zA-Z0-9-]*$/" required>
                                        <span class="errorMsg" ng-show="submitted && FormReferenceSource.SourceName.$error.pattern"><i class="fa fa-exclamation-triangle"></i> &nbsp;Source Name is not valid. special characters not allow.</span>
                                        <span class="errorMsg" ng-show="submitted && FormReferenceSource.SourceName.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Source Name is required.</span>
                                    </div>
                                </div>
                            </fieldset>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objRefSource.SourceId <= 0 && isClicked == false" data-ng-click="FormReferenceSource.$valid && Create(objRefSource)"> <i class="fa fa-save"></i>Save</button>
                                <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objRefSource.SourceId > 0 && isClicked == false" data-ng-click="FormReferenceSource.$valid && Update(objRefSource)"><i class="fa fa-edit"></i>Update</button>
                                <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/ElaunchControls")
    @Scripts.Render("~/bundles/ReferenceSource")
}
<div class="row">
    <div class="col-sm-12">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" data-ng-click="close()">&times;</button>
            <h3 class="modal-title" id="modal-title">Relation Information</h3>
        </div>
    </div>
    <div class="col-sm-12">
        <div class="box">
            <div class="box-body no-padding">
                <form accessible-form role="form" name="FormRelationInfo" id="FormRelationInfo" ng-class="{'submitted': submitted}" ng-submit="submitted=true" novalidate>
                    <fieldset ng-disabled="isClicked">
                        <div class="modal-body">
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="RelationName">Name:<span class="text-danger">*</span> </label>
                                        <input type="text" class="form-control" id="RelationName" name="RelationName" data-ng-model="objRelation.RelationName" placeholder="Relation Name" required maxlength="100">
                                        @*<div data-ng-show="FormRelationInfo.RelationName.$dirty && FormRelationInfo.RelationName.$invalid " class="label label-danger">
                                                invalid:<span data-ng-show="FormRelationInfo.RelationName.$error.required ">Tell us Relation Name.</span>
                                            </div>*@
                                        <span class="errorMsg" ng-show="submitted && FormRelationInfo.RelationName.$error.required"><i class="fa fa-exclamation-triangle"></i> &nbsp;Relation Name is required.</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objRelation.RelationId <= 0 && isClicked == false" data-ng-click="FormRelationInfo.$valid && CreateUpdate(objRelation)"> <i class="fa fa-save"></i>Save</button>
                        <button type="submit" class="btn btn-default btn-info btn-icon icon-left" data-ng-if="objRelation.RelationId > 0 && isClicked == false" data-ng-click="FormRelationInfo.$valid && CreateUpdate(objRelation)"><i class="fa fa-edit"></i>Update</button>
                        @*<button type="button" class="btn btn-default btn-success" data-ng-click="Reset()" tabindex="25">Reset</button>*@
                        <button type="button" class="btn btn-default" data-ng-click="close()">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

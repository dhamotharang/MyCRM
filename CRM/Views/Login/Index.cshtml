
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<meta name="google-site-verification" content="bNmnBUy-TApDJz9BBJLczOWl3t1qR2futrZK8dDHgcM" />
<link href="~/Content/lib/bootstrap/bootstrap.min.css" rel="stylesheet" />
<style>
    .login-form {
        background: url("../../Content/Images/bg.jpg") center top no-repeat;
        position:absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: 100% auto;
    }
    .login-box{
        background: #fff;
            padding: 20px 30px;
    border-radius: 6px;
    box-shadow: 0 0 30px 0 rgba(0, 0, 0, 0.35);
    margin-top: 60px;
    }
</style>
<div class="simple-page-form animated flipInY login-form" id="login-form">
    <div class="col-sm-4 col-sm-offset-4 login-box">
        <p class="text-center">
            <img src="~/Content/Images/logo.png" alt="" />
        </p>
        <hr />
        <h4 class="form-title m-b-xl text-center">Sign In</h4>
        @if (ViewBag.error != null || ViewBag.error != "")
        {
            <h6 class="form-title m-b-xl text-center" style="color:red">@ViewBag.error</h6>
        }
        @if (ViewBag.errormsg != null || ViewBag.errormsg != "")
            {
            @ViewBag.errormsg
        }

        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input id="sign-in-id" name="username" class="form-control" placeholder="Username" required="" />
            </div>

            <div class="form-group">
                <input id="sign-in-password" type="password" name="Pwd" class="form-control" placeholder="Password" required="" />
            </div>
                <div class="form-group m-b-xl">
                    <div class="checkbox checkbox-primary">
                        <input type="checkbox" id="keep_me_logged_in" />
                        <label for="keep_me_logged_in">Keep me signed in</label>
                    </div>
                </div>
                <div class="form-group text-center">
                    <input type="submit" class="btn btn-primary" value="SIGN IN" />
                </div>
        }
    </div>
</div>



